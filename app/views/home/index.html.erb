<div ng-app="pokemonApp" ng-controller="homeController" class="container-fluid">
  <div class="row team-row">
    <div class="col-md-6">
      <% current_user.team_ball.each do |ball| %>
        <%= image_tag ball, class: "pokeball" %>
      <% end %>
      {{ hello }}
    </div>
  </div>
  <div class="row poke-display">
    <% @pokemon.each do |poke| %>
      <div class="pokemon-display pokemon col-md-3 img-circle" ng-show="isShown(<%=poke.id%>)">
        <div class="poke-text">
          &nbsp
          <p class=<%= poke.div.attack %> >attack: <%=poke.compare.attack%></p>
          <p class=<%= poke.div.special_attack %>>sp attack: <%=poke.compare.special_attack%></p>
          <p class=<%= poke.div.defense %>>defense: <%= poke.compare.defense %></p>
          <p class=<%= poke.div.special_defense %>>sp defense: <%= poke.compare.special_defense %></p>
          <p class=<%= poke.div.speed %>>speed: <%=poke.compare.speed%></p>
          <p class=<%= poke.div.hit_points %>>hit points: <%= poke.compare.hit_points %></p>
        </div>
      </div>
      <%= image_tag "#{poke.image}", class: "pokemon-display col-md-3 img-circle pokemon", "ng-mouseEnter": "showStats(#{poke.id})", "ng-hide": "isShown(#{poke.id})" %>
      <%= link_to "#{poke.name}", add_team_path(poke: poke), method: :put, class: "add-#{poke.name}-to-team" %>
    <% end %>
  </div>
</div>
