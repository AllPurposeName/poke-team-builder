<div ng-app="pokemonApp" ng-controller="homeController" class="container-fluid">
  <div class="row team-row">
    <div class="col-md-6">
      <% current_user.team_ball.each do |ball| %>
        <%= image_tag ball, class: "pokeball" %>
      <% end %>
      {{ hello }}
    </div>
  </div>
  <div class="row poke-display">
    <% @pokemon.each do |poke| %>
      <div class="pokemon-display pokemon col-md-3 img-circle" ng-show="isShown(<%=poke.id%>)">
        <div class="poke-text">
          <table border="0" cellspacing="5" cellpadding="5">
            <tr><td><%=poke.compare.attack%>: attack</td><td>defense :<%= poke.compare.defense %></td></tr>
            <tr><td><%=poke.compare.special attack%>: special attack</td><td>special defense :<%= poke.compare.special_defense %></td></tr>
            <tr><td><%=poke.compare.speed%>: speed</td><td>hit points :<%= poke.compare.hit_points %></td></tr>
          </table>
        </div>
      </div>
      <%= image_tag "#{poke.sprites.first.image}", class: "pokemon-display col-md-3 img-circle pokemon", "ng-mouseEnter": "showStats(#{poke.id})", "ng-hide": "isShown(#{poke.id})" %>
      <%= link_to "#{poke.name}", add_team_path(poke: poke), method: :put, class: "add-#{poke.name}-to-team" %>
    <% end %>
  </div>
</div>
