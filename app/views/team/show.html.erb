<div ng-app="pokemonApp" ng-controller="homeController" class="container-fluid">
  <div class="row team-row">
    <div class="col-md-4">
      <% current_user.team_ball.each do |ball| %>
        <%= image_tag ball, class: "pokeball" %>
      <% end %>
    </div>
    <div class="col-md-4">
    Delete all
    </div>
    <div class="col-md-4">
    Tweet team
    </div>
  </div>
  <div class="row poke-display">
    <% @team.pokemons.each do |poke| %>
      <div class="pokemon-display pokemon col-md-3 img-circle" ng-show="isShown(<%=poke.id%>)">
        <div class="delete-text">
          <br><br><br><br>
          <%= link_to "Remove From Team", remove_team_path(poke: poke), method: :delete, class: "remove-#{poke.name}-from-team" %>
        </div>
      </div>
      <%= image_tag "#{poke.sprites.first.image}", class: "pokemon-display col-md-3 img-circle pokemon", "ng-mouseEnter": "showStats(#{poke.id})", "ng-hide": "isShown(#{poke.id})" %>
    <% end %>
  </div>
  <%= render "team_stats" %>
</div>
</div>
